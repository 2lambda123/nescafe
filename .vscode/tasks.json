{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "mcs -debug -unsafe -r:System.Windows.Forms.dll -r:System.Drawing.dll -out:emulator.exe src/*.cs",
            "type": "shell",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "taskName": "clean",
            "command": "rm emulator.exe",
            "type": "shell"
        },
        {
            "taskName": "run",
            "command": "./emulator.exe",
            "type": "shell"
        }
    ]
}